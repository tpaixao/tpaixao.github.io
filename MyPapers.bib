	journal = {Journal of Computational and Applied Mathematics},
	author = {Carneiro, Jorge and Paixão, Tiago and Milutinovic, Dejan and Sousa, João and Leon, Kalet and Gardner, Rui and Faro, Jose},
	month = dec,
	year = {2005},
	keywords = {Modeling, Regulatory CD4+CD25+T cells, Self-tolerance, Tunning},
	pages = {77--100},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\tpaixao\\Zotero\\storage\\FVFHP9QG\\Carneiro et al. - 2005 - Immunological self-tolerance Lessons from mathema.pdf:application/pdf},
