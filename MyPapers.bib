	author = {Velho, Tiago R. and Pereira, Rafael Maniés and Paixão, Tiago and Guerra, Nuno Carvalho and Ferreira, Ricardo and Corte-Real, Hugo and Nobre, Ângelo and Moita, Luís Ferreira},
	month = may,
