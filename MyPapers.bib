	pages = {5358--5364},
	file = {Full Text PDF:C\:\\Users\\tpaixao\\Zotero\\storage\\NN72ADZX\\Calado et al. - 2006 - Stochastic Monoallelic Expression of IL-10 in T Ce.pdf:application/pdf},
}

