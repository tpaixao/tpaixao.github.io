	journal = {Current Biology},
	author = {Gomes Pereira, Sónia and Sousa, Ana Laura and Nabais, Catarina and Paixão, Tiago and Holmes, Alexander J. and Schorb, Martin and Goshima, Gohta and Tranfield, Erin M. and Becker, Jörg D. and Bettencourt-Dias, Mónica},
